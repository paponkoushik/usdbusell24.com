{% extends 'layouts/default.twig' %}

{% block content %}
    <div class="row text-center">
        <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
            <div class="user-account">
                <h2>Forgot Password</h2>
                <div class="alert alert-info">
                    <i class="fa fa-info-circle"></i>
                    Please enter your email address in form below to send you link for password reset.
                </div>
                <form action="#" method="#">
                    <div class="form-group">
                        <input type="text" class="form-control" name="email" placeholder="Email address" >
                    </div>
                    <button type="submit" name="bit_login" class="btn">Send</button>
                    <div class="user-option">
                        {#<div class="checkbox pull-left">
                            <label><input type="checkbox" name="remember_me" value="yes"> Remember me</label>
                        </div>#}
                        <div class="pull-left forgot-password">
                            <a href="/login">Have an account?</a>
                        </div>
                        <div class="pull-right forgot-password">
                            <a href="/signup">Sign up?</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}