{% extends 'layouts/application.twig' %}
{% block title %} Money Provider | Create {% endblock %}
{% block breadcumbs %}
    <div class="breadcrumbs">
        <div class="breadcrumbs-inner">
            <div class="row m-0">
                <div class="col-sm-4">
                    <div class="page-header float-left">
                        <div class="page-title">
                            <h1>Admin</h1>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="page-header float-right">
                        <div class="page-title">
                            <ol class="breadcrumb text-right">
                                <li><a href="#">Profile</a></li>
                                <li class="active">{{ session.auth.uuid }}</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title"><h3>{{ session.auth.first_name }} {{ session.auth.last_name }}</h3></strong>
                </div>
                <div class="card-body card-block">
                    <div class="row">
                        <div class="col-md-3 col-lg-3 " align="center">
                            <img alt="User Pic" src="{{ session.auth.profile_pic }}" class="img-circle img-responsive" onerror="this.onerror=null;this.src='/assets/images/profile.jpeg'" height="150" width="180">
                            <br><br>
                            <button type="submit" class="btn btn-primary btn-sm"
                                    data-toggle="modal"
                                    data-target="#changePicture">Change Picture</button>
                        </div>
                        <div class=" col-md-9 col-lg-9 ">
                            <form action="/admin/profile/update" method="post">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <input type="hidden" name="uuid" value="{{ session.auth.uuid }}" class="form-control">
                                            <label for="moneyProviderName" class=" form-control-label">First Name</label>
                                            <input type="text" name="first_name" value="{{ session.auth.first_name }}" id="firstName" placeholder="Enter first name" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="moneyProviderName" class=" form-control-label">Last Name</label>
                                            <input type="text" name="last_name" value="{{ session.auth.last_name }}"  id="lastName" placeholder="Enter last name" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="moneyProviderName" class=" form-control-label">Email Address</label>
                                            <input type="email" name="email_address" id="emailAddress" value="{{ session.auth.email_address }}"  placeholder="Enter email address" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fa fa-dot-circle-o"></i> Update
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">Security Settings</strong>
                </div>
                <div class="card-body card-block">
                    <div>
                        <p class="title">Change Password</p>
                    </div>
                    <div class="row">
                        <div class=" col-md-6 col-lg-6 ">
                            <form action="/admin/profile/change-password/{{ session.auth.uuid }}" method="post">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="moneyProviderName" class=" form-control-label">Current Password</label>
                                        <input type="password" name="current_password" id="current_password" placeholder="*****" class="form-control">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="moneyProviderName" class=" form-control-label">New Password</label>
                                        <input type="password" name="password" id="password" placeholder="******" class="form-control">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="moneyProviderName" class=" form-control-label">Confirm Password</label>
                                        <input type="password" name="confirm_password" id="emailAddress" placeholder="******" class="form-control">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-sm">
                                            <i class="fa fa-dot-circle-o"></i> Change
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">Exchange Request</strong>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>Rocket Agent</td>
                            <td>120</td>
                            <td>
                                <a href="#" class="btn btn-success btn-sm">Edit</a>
                                <a href="#" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>Bikash Agent</td>
                            <td>123</td>
                            <td>
                                <a href="#" class="btn btn-success btn-sm">Edit</a>
                                <a href="#" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">3</th>
                            <td>Rocket Personal</td>
                            <td>455</td>
                            <td>
                                <a href="#" class="btn btn-success btn-sm">Edit</a>
                                <a href="#" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">4</th>
                            <td>Skrill Personal</td>
                            <td>455</td>
                            <td>
                                <a href="#" class="btn btn-success btn-sm">Edit</a>
                                <a href="#" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">5</th>
                            <td>Coinbase</td>
                            <td>455</td>
                            <td>
                                <a href="#" class="btn btn-success btn-sm">Edit</a>
                                <a href="#" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">6</th>
                            <td>Dollar Exchange</td>
                            <td>455</td>
                            <td>
                                <a href="#" class="btn btn-success btn-sm">Edit</a>
                                <a href="#" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    {# Picture Upload Modal#}
    <div class="to-do-widget m-t-20">
        <div class="modal fade bd-example-modal-lg" id="changePicture" tabindex="-1"
             aria-labelledby="myLargeModalLabel" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-lg-6" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Change Profile Picture</h4>
                    </div>
                    <div class="modal-body">
                        <form action="/admin/profile/upload-picture/{{ session.auth.uuid }}" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <input id="picture" type="file" value=""
                                               class="form-control" name="picture">
                                    </div>
                                </div>
                                <div class="modal-footer text-left">
                                    <button type="submit" class="btn btn-primary btn-sm">Change Picture</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}